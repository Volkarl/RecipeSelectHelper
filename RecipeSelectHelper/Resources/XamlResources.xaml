    <DataTemplate x:Key="DataTemplateViewValueSender" DataType="local:IntStringTuple">
        <DockPanel>
            <ProgressBar Maximum="{Binding TotalValue}" Value="{Binding Item1}" DockPanel.Dock="Top"></ProgressBar>
            <TextBlock Text="{Binding Item2}"></TextBlock>
        </DockPanel>
    </DataTemplate>

    <DataTemplate x:Key="DataTemplateProductCategoryDetailView" DataType="{x:Type model:ProductCategory}">
        <Expander>
            <StackPanel>
                <TextBlock>
                    <Run Text="Product Category: "></Run>
                    <Run Text="{Binding Name}"></Run>
                </TextBlock>

                <ItemsControl Visibility="{Binding OwnValue.GetSenders, Converter={StaticResource NullOrEmptyToVisibilityConverter}}" ItemTemplate="{DynamicResource DataTemplateViewValueSender}" ItemsSource="{Binding OwnValue.GetSenders}"></ItemsControl>
            </StackPanel>
        </Expander>
    </DataTemplate>

    <DataTemplate x:Key="DataTemplateRecipeCategoryDetailView" DataType="{x:Type model:RecipeCategory}">
        <Expander>
            <StackPanel>
                <TextBlock>
                    <Run Text="Recipe Category: "></Run>
                    <Run Text="{Binding Name}"></Run>
                </TextBlock>

                <ItemsControl Visibility="{Binding OwnValue.GetSenders, Converter={StaticResource NullOrEmptyToVisibilityConverter}}" ItemTemplate="{DynamicResource DataTemplateViewValueSender}" ItemsSource="{Binding OwnValue.GetSenders}"></ItemsControl>
            </StackPanel>
        </Expander>
    </DataTemplate>

    <DataTemplate x:Key="DataTemplateProductDetailView" DataType="{x:Type model:Product}">
        <Expander>
            <StackPanel>
                <TextBlock>
                    <Run Text="Product: "></Run>
                    <Run Text="{Binding Name}"></Run>
                </TextBlock>
                
                <ItemsControl Visibility="{Binding OwnValue.GetSenders, Converter={StaticResource NullOrEmptyToVisibilityConverter}}" ItemTemplate="{DynamicResource DataTemplateViewValueSender}" ItemsSource="{Binding OwnValue.GetSenders}"></ItemsControl>
                <ItemsControl Visibility="{Binding Categories, Converter={StaticResource NullOrEmptyToVisibilityConverter}}" ItemTemplate="{DynamicResource DataTemplateProductCategoryDetailView}" ItemsSource="{Binding Categories}"></ItemsControl>
            </StackPanel>
        </Expander>
    </DataTemplate>

    <DataTemplate x:Key="DataTemplateIngredientDetailView" DataType="{x:Type model:Ingredient}">
        <Expander>
            <StackPanel>
                <TextBlock>
                    <Run Text="Ingredient: "></Run>
                    <Run Text="{Binding CorrespondingProduct.Name}"></Run>
                </TextBlock>

                <ItemsControl Visibility="{Binding OwnValue.GetSenders, Converter={StaticResource NullOrEmptyToVisibilityConverter}}" ItemTemplate="{DynamicResource DataTemplateViewValueSender}" ItemsSource="{Binding OwnValue.GetSenders}"></ItemsControl>
                <ItemsControl ItemTemplate="{DynamicResource DataTemplateProductDetailView}" ItemsSource="{Binding CorrespondingProduct}"></ItemsControl>
            </StackPanel>
        </Expander>
    </DataTemplate>

    <DataTemplate x:Key="DataTemplateRecipeDetailView" DataType="{x:Type model:Recipe}">
        <Expander>
            <StackPanel>
                <TextBlock>
                    <Run Text="Recipe: "></Run>
                    <Run Text="{Binding Name}"></Run>
                </TextBlock>
                
                <ItemsControl Visibility="{Binding OwnValue.GetSenders, Converter={StaticResource NullOrEmptyToVisibilityConverter}}" ItemTemplate="{DynamicResource DataTemplateViewValueSender}" ItemsSource="{Binding OwnValue.GetSenders}"></ItemsControl>
                <TextBlock Text="Recipe Category:"></TextBlock>
                <ItemsControl Visibility="{Binding Categories, Converter={StaticResource NullOrEmptyToVisibilityConverter}}" ItemTemplate="{DynamicResource DataTemplateRecipeCategoryDetailView}" ItemsSource="{Binding Categories}"></ItemsControl>
                <TextBlock Text="Ingredients:"></TextBlock>
                <ItemsControl Visibility="{Binding Ingredients, Converter={StaticResource NullOrEmptyToVisibilityConverter}}" ItemTemplate="{DynamicResource DataTemplateIngredientDetailView}" ItemsSource="{Binding Ingredients}"></ItemsControl>
            </StackPanel>
        </Expander>
    </DataTemplate>

</ResourceDictionary>