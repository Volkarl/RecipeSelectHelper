<Page x:Class="RecipeSelectHelper.View.Categories.AddCategoriesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RecipeSelectHelper.View"
      mc:Ignorable="d" 
      d:DesignHeight="360" d:DesignWidth="680"
      DataContext="{Binding RelativeSource={RelativeSource Self}}"
      Title="AddRecipeCategoriesPage">

    <ScrollViewer VerticalScrollBarVisibility="Auto" KeyDown="EnterPressed">
        <StackPanel>
            <DockPanel Height="30" LastChildFill="True" Margin="1">
                <Label Content="Category Name: " Width="125" HorizontalAlignment="Right" DockPanel.Dock="Left"></Label>
                <TextBox Name="TextBox_CategoryName" Style="{StaticResource StyleBorderColorOnBool}" Tag="{Binding CategoryNameValid}" LostFocus="CategoryNameChanged" VerticalContentAlignment="Center" DockPanel.Dock="Left"></TextBox>
            </DockPanel>

        </StackPanel>
    </ScrollViewer>
</Page>
