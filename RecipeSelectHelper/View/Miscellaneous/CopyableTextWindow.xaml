<Window x:Class="RecipeSelectHelper.View.Miscellaneous.CopyableTextWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecipeSelectHelper.View.Miscellaneous"
        mc:Ignorable="d"
        Title="CopyableTextWindow" Height="500" Width="700">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBox Name="TextBoxTextToCopy" HorizontalContentAlignment="Left" VerticalContentAlignment="Top" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap"></TextBox>
        <UniformGrid Grid.Row="1" Rows="1">
            <Button Name="ButtonCopy" Click="ButtonCopy_OnClick" Content="Copy" VerticalAlignment="Bottom" Height="30"></Button>
            <Button Name="ButtonOk" Click="ButtonOk_OnClick" Content="OK" Height="30" VerticalAlignment="Bottom" IsCancel="True"></Button>
        </UniformGrid>
    </Grid>
</Window>
